<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#fff"
    >
    <ImageView
        android:src="@drawable/logo_top_center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
        
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <EditText
            android:id="@+id/search_edit"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
        />
         <ImageView
         android:id="@+id/search_button"
         android:src="@drawable/ic_menu_search"
         android:layout_height="wrap_content"
         android:layout_width="50sp"
          />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="5sp">
        <ImageView
            android:id="@+id/closest_image"
            android:src="@drawable/ic_menu_mylocation"
            android:layout_width="50sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/closest_text"
            android:layout_width="180sp"
            android:layout_height="wrap_content" 
            android:text="@string/closest_button"
            style="@style/MainNav"
            />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/state_image"
            android:src="@drawable/ic_menu_mapmode"
            android:layout_width="50sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/state_text"
            android:layout_height="wrap_content" 
            android:text="@string/state_button"
            android:layout_width="180sp"
            style="@style/MainNav"
            />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:gravity="center">
        <ImageView
            android:id="@+id/favorite_image"
            android:src="@drawable/btn_star_big_on"
            android:layout_width="50sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/favorite_text"
            android:layout_width="180sp" 
            android:layout_height="wrap_content" 
            android:text="@string/favorite_button"
            style="@style/MainNav"
            />
    </LinearLayout>
</LinearLayout>
